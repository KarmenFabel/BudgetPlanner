<Window x:Class="BudgetPlanner.Rent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner"
        mc:Ignorable="d"
        Title="Rent" Height="450" Width="800">
    <Grid>
        <Label Content="Please enter the monthly rental amount of the property" HorizontalAlignment="Left" Margin="123,156,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Renting" HorizontalAlignment="Left" Margin="476,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Height="26" TextChanged="Renting_TextChanged"/>
        <Button x:Name="CToCar" Content="Yes" HorizontalAlignment="Left" Margin="275,273,0,0" VerticalAlignment="Top" Width="72" Click="CToCar_Click"/>
        <Label Content="Would you like to buy a car?" HorizontalAlignment="Left" Margin="266,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.388,1.637"/>
        <Button x:Name="NContToTotal" Content="No" HorizontalAlignment="Left" Margin="400,273,0,0" VerticalAlignment="Top" Width="70" Click="NContToTotal_Click"/>

    </Grid>
</Window>
